/* conponents/goods.wxss */
.item
{
  width: 100%;
  height: 350px;
  border: 1px solid #ccc;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.bookpicture
{
  width: 140px;
  height: 180px;
  background-color: rgb(214, 210, 210);
  position: relative;
  top:30px;
  border-radius: 10%;
}
.bookname
{
  width: 100px;
  height: 20px;
  left: -30px;
  top: 22px;
  position: relative;
  font-size: 22rpx;
  font-weight: bold;
  white-space: nowrap;/*文本不换行*/
}
.price
{
  width: 50px;
  height: 20px;
  left: -55px;
  top: 25px;
  position: relative;
  font-size: 33rpx;
  font-weight: bold;
  color: brown;
}
.number
{
  width: 50px;
  height: 20px;
  left: -55px;
  top: 44px;
  position: relative;
  font-size: 22rpx;
  font-weight: 200;
}
.back
{
  width:50%;
  position:absolute;
  height: 350px;
  z-index: 0;
  border-radius: 10%;
}